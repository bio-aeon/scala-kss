<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>[%thread] %yellow(%d) %highlight(%-5level) %cyan(%logger{40}) - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="net.iponweb.tf.demo" level="DEBUG" />

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
